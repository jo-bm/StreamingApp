FROM python:3.11

COPY requirements.txt .
RUN pip install -r requirements.txt

WORKDIR /app
COPY templates ./templates
COPY  static/funcs.py ./static/
COPY static/css ./static/css/
COPY static/*.json ./static/
COPY app.py .


ENV PYTHONUNBUFFERED=1

USER root
EXPOSE 5000

CMD ["bash", "-c", "python /app/static/funcs.py & python app.py"]
